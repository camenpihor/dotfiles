{
    // search
    "search.exclude": {
        "**/htmlcov": true,
        "docs/resources/**": true,
        "build/**": true
    },
    // files
    "files.defaultLanguage": "python",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.cache": true,
        "**/.coverage": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.ipynb_checkpoints": true,
        "**/.svn": true,
        "**/.tox": true,
        "**/.vscode": true,
        "**/*.egg-info": true,
        "**/*.pyc": true,
        "**/CVS": true,
        "**/.pytest_cache": true,
        "**/.coverage*": true,
        "~/Library/Caches/Python-Eggs": true
    },
    "files.trimTrailingWhitespace": true,
    // explorer
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.autoReveal": false,
    // editor
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.wrappingIndent": "same",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.minimap.enabled": false,
    "editor.cursorStyle": "block",
    "editor.fontFamily": "Liga SFMono Nerd Font",
    "editor.fontSize": 13,
    "editor.formatOnSave": true,
    // terminal
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.scrollback": 100000,
    "terminal.integrated.fontWeight": "100",
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.altClickMovesCursor": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontSize": 14,
    // workbench
    "workbench.fontAliasing": "antialiased",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.indent": 4,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.colorTheme": "GitHub Dark",
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "workbench.activityBar.visible": false,
    "workbench.settings.editor": "json",
    // keyboard
    "keyboard.touchbar.enabled": false,
    // window
    "window.autoDetectHighContrast": false,
    "window.nativeFullScreen": false,
    "window.restoreWindows": "none",
    "window.title": ".",
    // "window.zoomLevel": 0.5,
    // lanaguage-specific
    "[markdown]": {
        "editor.tabSize": 2,
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 90
    },
    "[python]": {
        "editor.formatOnPaste": false,
        // "editor.wordWrap": "wordWrapColumn",
        // "editor.wordWrapColumn": 90,
        "editor.rulers": [
            // 90
        ]
    },
    "python.analysis.autoImportCompletions": false,
    "python.analysis.completeFunctionParens": false,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "90",
    ],
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pydocstyleArgs": [
        "--convention=numpy",
        "--match-dir=^(?!(tests))"
    ],
    "python.analysis.diagnosticMode": "workspace",
    "python.experiments.enabled": false,
    "python.testing.autoTestDiscoverOnSaveEnabled": false,
    "python.languageServer": "Pylance",
    "python.analysis.exclude": [
        "*.ipynb"
    ],
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none"
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.wordWrapColumn": 100
    },
    // Extension Settings
    "autoDocstring.docstringFormat": "numpy",
    "autoDocstring.generateDocstringOnEnter": true,
    "jupyter.askForKernelRestart": true,
    "jupyter.askForLargeDataFrames": false,
    "jupyter.codeLenses": "",
    "jupyter.addGotoCodeLenses": false,
    "jupyter.debugCodeLenses": "",
    "jupyter.enableCellCodeLens": false,
    "jupyter.experiments.enabled": false,
    "jupyter.generateSVGPlots": true,
    "jupyter.logging.level": "info",
    "jupyter.newCellOnRunLast": false,
    "jupyter.enableAutoMoveToNextCell": false,
    "jupyter.showOutlineButtonInNotebookToolbar": false,
    "notebook.output.textLineLimit": 500,
    "path-intellisense.autoSlashAfterDirectory": true,
    "path-intellisense.autoTriggerNextSuggestion": true,
    "path-intellisense.extensionOnImport": true,
    "path-intellisense.showHiddenFiles": true,
    "path-intellisense.absolutePathToWorkspace": false,
    "path-intellisense.mappings": {
        "~": "${HOME}",
    },
    // Miscellaneous
    "update.mode": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "breadcrumbs.enabled": false,
}
